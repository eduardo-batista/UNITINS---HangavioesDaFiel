@model HangavioesDaFiel.Models.Administrator

@{
    ViewData["Title"] = "Create";
}

<h1>Criar novo</h1>

<h4>Administrador</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" id="logado">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cpf" class="control-label"></label>
                <input asp-for="Cpf" class="form-control" />
                <span asp-validation-for="Cpf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" type="email"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Status"/> @Html.DisplayNameFor(model => model.Status)
                </label>
            </div>
            <div class="form-group" style="padding-top: 20px">
                <a asp-action="Index" class="btn btn-outline-info">Voltar para a lista</a>
                <input type="submit" value="Criar" class="btn btn-primary" style="float: right"/>
            </div>
        </form>

        <form asp-action="CreateDeslogado" id="deslogado">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cpf" class="control-label"></label>
                <input asp-for="Cpf" class="form-control" />
                <span asp-validation-for="Cpf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" type="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group form-check" hidden>
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Status" /> @Html.DisplayNameFor(model => model.Status)
                </label>
            </div>
            <div class="form-group" style="padding-top: 20px">
                <a asp-action="Index" class="btn btn-outline-info" hidden>Voltar para a lista</a>
                <input type="submit" value="Criar" class="btn btn-primary" style="float: right" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#Cpf').mask('999.999.999-99');
        });
    </script>
    <script>
        $(document).ready(function () {
            $('#Phone').mask('(99) 99999-9999');
        });
    </script>
    <script>
        const data = getUrlData()
        const keyexpected = "a"
        if (data[keyexpected]) {
            document.getElementById("logado").hidden = true;
            document.querySelector("body > header > nav > div > div > ul").remove()
        } else {
            document.getElementById("deslogado").hidden = true;
        }

        function getUrlData() {
            const urlParams = new URLSearchParams(location.search);

            const result = {};

            for (const [key, value] of urlParams.entries()) {
                result[key] = value;
            }
            return result;
        }
    </script>
}