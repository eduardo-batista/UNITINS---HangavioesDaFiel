@model IEnumerable<HangavioesDaFiel.Models.Airplane>

@{
    ViewData["Title"] = "Index";
}

<h1>Aviões</h1>

<p style="float: right">
    <a asp-action="Create" class="btn btn-primary">Criar novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Identifier)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClassMotor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClassHeight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClassSize)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Traveling)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Identifier)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClassMotor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClassHeight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClassSize)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Traveling)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    <div style="float: right">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-light">Detalhes</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning">Editar</a>
                    </div>
                </td>
        </tr>
}
    </tbody>
</table>
