<div>
    <h4>Travel</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DepartureDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DepartureDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReturnDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReturnDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Team)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Team.Aptitude)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Pilot)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Pilot.Name)
        </dd>
        <dt class = "col-sm-2">
