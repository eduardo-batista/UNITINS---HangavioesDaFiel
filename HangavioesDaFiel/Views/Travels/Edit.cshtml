@model HangavioesDaFiel.Models.Travel

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Viagem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="DepartureDate" class="control-label"></label>
                <input asp-for="DepartureDate" class="form-control" />
                <span asp-validation-for="DepartureDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReturnDate" class="control-label"></label>
                <input asp-for="ReturnDate" class="form-control" />
                <span asp-validation-for="ReturnDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeamId" class="control-label"></label>
                <select asp-for="TeamId" class="form-control" asp-items="ViewBag.TeamId"></select>
                <span asp-validation-for="TeamId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PilotId" class="control-label"></label>
                <select asp-for="PilotId" class="form-control" asp-items="ViewBag.PilotId"></select>
                <span asp-validation-for="PilotId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CopilotId" class="control-label"></label>
                <select asp-for="CopilotId" class="form-control" asp-items="ViewBag.CopilotId">
                    <option value="">Selecione...</option>
                </select>
                <span asp-validation-for="CopilotId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AirplaneId" class="control-label"></label>
                <select asp-for="AirplaneId" class="form-control" asp-items="ViewBag.AirplaneId"></select>
                <span asp-validation-for="AirplaneId" class="text-danger"></span>
            </div>
            <div class="form-group" style="padding-top: 20px">
                <a asp-action="Index" class="btn btn-outline-info">Voltar</a>
                <input type="submit" value="Salvar" class="btn btn-primary" style="float: right" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
